spring.application.name=spring-boot-solr-cloud

#SolrCloud zookeeper
spring.data.solr.zk-host=node1:2181,node2:2181,node3:2181
#热部署生效
spring.devtools.restart.enabled=true
#设置重启的目录
#spring.devtools.restart.additional-paths: src/main/java
#classpath目录下的WEB-INF文件夹内容修改不重启
spring.devtools.restart.exclude=WEB-INF/**

#zookeeper Configuration
zookeeper.host=master:2181,slave1:2181,slave2:2181,slave3:2181/solr
zookeeper.socketTimeout=10000
zookeeper.zkConnectTimeout=10000